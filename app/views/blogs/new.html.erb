<% if !user_signed_in? %>
	<h3>Área não autorizada</h3>

<% else %>




<div class="form-group">
            &nbsp;
          </div>
          <%= form_for(@blog, url: blogs_create_path) do |f| %>
          
          <div class="form-group">
            <%= f.label :título %>
            <%= f.text_field :title, class: "form-control"%>

            
            
          </div>
          <div class="form-group">
            <%= f.label :subtítulo %>
            <%= f.text_area :subtitle, rows: "2", class: "form-control"%>
            
          </div>
          
          <div class="form-group">
            <label class = "btn btn-primary">
              Imagem Banner<%= f.file_field :banner, style: 'display:none;'%>
            </label>
          </div>
          
          <div class="form-group">
            <%= f.label :conteúdo %>
            <%= f.text_area :content, rows: "30", class: "form-control"%>
            
          </div>
          <div class = "row">
            <div class = "col-sm"><%= f.submit "Criar", class: "btn btn-primary" %></div>
          </div>
        
          <% end %>

<% end %>