<% if !user_signed_in? %>
	<h3>Área não autorizada</h3>

<% else %>




<div class="form-group">
            &nbsp;
          </div>
          <%= form_for(@document, url: create_document_path) do |f| %>
          
          <div class="form-group">
            <%= f.label :Título_do_documento %>
            <%= f.text_field :title, class: "form-control"%>

          </div>
          
          
          <div class="form-group">
            <label class = "btn btn-primary">
              Documento<%= f.file_field :file, style: 'display:none;'%>
            </label>
          </div>
          
          
          <div class = "row">
            <div class = "col-sm"><%= f.submit "Enviar", class: "btn btn-primary" %></div>
          </div>
        
          <% end %>

<% end %>